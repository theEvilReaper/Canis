{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "patch",
      "schedule": [
        "after 10pm and before 6:00am every day"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "schedule": [
        "before 6:00am every friday"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "Component::security"
    ],
    "automerge": true
  }
}
